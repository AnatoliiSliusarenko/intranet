<div class="modal-body" >
            	<form action="#" class="form-horizontal" role="form" method="post">
            		<ul class="hr" style="display: flex;">
            			<li>
            			<div>
            				<img src="{{app.request.getBaseURL() }}/../documents/{{ userAvatar}}" style="height: 100px;margin-left: 50%;border-radius: 40px;" alt="" />
            			</div>
            				<div class="form-group">
						  <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Priority</label>
						  <div class="col-lg-10 col-md-9">
						   <select ng-model="task.priority" class="form-control">
						    <option value="high">High</option>
						    <option value="medium">Medium</option>
						    <option value="low">Low</option>
						   </select>
						  </div>
					</div>
					<div class="form-group">
						  <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Status</label>
						  <div class="col-lg-10 col-md-9">
						   <select ng-change="checkEstimated()" ng-model="task.statusid" class="form-control">
						    {% for status in availableStatus %}
						    <option value="{{ status.id }}">{{ status.label }}</option>
						    {% endfor %}
						   </select>
						  </div>
					</div>
					<div class="form-group" ng-show="estimated">
					  <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Est: h</label>
					  <div class="col-lg-10 col-md-9">
					   <select ng-model="task.esth" class="form-control">
					    <option value="0">0</option>
					    <option value="1">1</option>
					    <option value="2">2</option>
					    <option value="3">3</option>
					    <option value="4">4</option>
					    <option value="5">5</option>
					    <option value="6">6</option>
					    <option value="7">7</option>
					    <option value="8">8</option>
					    <option value="9">9</option>
					    <option value="10">10</option>
					  </select>
					</div>
					</div>
					<div class="form-group" ng-show="estimated">
					  <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Est: m</label>
					  <div class="col-lg-10 col-md-9">
					   <select ng-model="task.estm" class="form-control">
					    <option value="0">0</option>
					    <option value="5">5</option>
					    <option value="10">10</option>
					    <option value="15">15</option>
					    <option value="20">20</option>
					    <option value="25">25</option>
					    <option value="30">30</option>
					    <option value="35">35</option>
					    <option value="40">40</option>
					    <option value="45">45</option>
					    <option value="50">50</option>
					    <option value="55">55</option>
					   </select>
					  </div>
					</div>
             		<div class="form-group">
  						<label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Assigned</label>
  						<div class="col-lg-10 col-md-9">
   							<select ng-model="task.userid" class="form-control">
   								<option value="null">--- Not assigned ---</option>
   								<option ng-repeat="user in users" value="[[ user.id ]]" ng-selected="task.userid == user.id">[[ user.surname + ' ' + user.name + ' (' + user.username + ')' ]]</option>
  							</select>
						</div>
					</div>
					
					<div class="form-group">
  						<label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Topics</label>
  						<div class="col-lg-10 col-md-9">
   							<select ng-model="task.topicid" class="form-control">
   								{% for topic in topics %}
   								<option value="{{ topic.id }}">{{ topic.name }}</option>
  								{% endfor %}
  							</select>
						</div>
					</div>
             		
             		<div class="form-actions">
             			<input type="submit" value="Save Task" class="btn bg-primary btn-block text-white" ng-click="editTask($event)">
             		</div>
            			</li>
            			<li style="width: 50%; margin-left: auto">
            				<div ng-show="!addingDocuments" class="row chat-box">
								<div class="panel panel-cascade recipient-box">
									<div class="panel-body nopadding">
		  								<div id="conversation-task" class="list-group conversation" style="height: 300px;">
		  									<div class="list-group-item" ng-repeat="post in posts">
		  										<img src="[[avatarURL + post.user.avatar]]" class="chat-user-avatar" alt="" />
		  										<span class="username" >[[post.user.name + ' ' + post.user.surname]] ([[post.user.username]])<span class="time">[[ post.posted.date ]]&nbsp;<span ng-show="isEditable(post)" ng-click="editPost(post)" class="badge bg-info pull-right editable"><i class="fa fa-pencil"></i></span></span> </span>
		  										<i class="fa fa-edit" ng-show="post.edited"></i>
		  										<p style="white-space: pre-line;" ng-bind-html="post.message"></p>
		  									</div>
		  								</div>
		  								<div class="input-group">
		  									<span class="input-group-btn">
  												<button class="btn btn-success" ng-click="addDocuments()"><i class="fa fa-file"></i></button>
  											</span>
			  								<textarea id="write-message-task" ng-model="comment" style="resize:vertical;" class="form-control write-message" ng-class="{editing: editingPost}" placeholder="Type something here and hit enter" ng-keypress="pressEnter($event)">[[ message ]]</textarea>
			  								<span class="input-group-btn">
			  									<button class="btn text-white bg-primary send-message" type="button" ng-click="addPost()">Add</button>
			  								</span>
		  								</div><!-- /input-group -->
		  							</div>
								</div>
							</div>
							<div ng-show="addingDocuments" class="panel ">
    				<div class="panel-body">
				<h4>Available types: <b>{{ availableTypes }}</b></h4>
           		<input type="file" name="file_upload" id="file_upload" />
			</div>
			<div class="panel-heading bg-primary text-white">
				<h3 class="panel-title">
					<i class="fa fa-check-square-o"></i>
					Documents List
				</h3>
			</div>
			<div class="panel-body nopadding" style="display: block; height: 400px; overflow-y:scroll">
				<ul class="list-group list-todo">
					<li class="list-group-item" ng-repeat="document in documents">
						<i class="fa fa-check-square-o finish   fa-square-o" ng-click="checkItem(document.id)"></i>
						<span>&nbsp;[[ document.name ]]</span>
						<span class="pull-right ">
							<img src="{{ app.request.getBaseURL() }}/../[[ document.url ]]" width="32" height="32" alt="[[ document.name ]]">
						</span>
					</li>
				</ul>
			</div>
			<div class="panel-body" style="display: block;">
				<button class="btn btn-success btn-block" ng-click="addDocuments()">Add Documents</button>
			</div>
	</div> 
            			</li>	
            		</ul>
            		          		
            	</form>
			</div>
			<script>
	var TIMESTAMP = '{{ timestamp }}';
	var TOKEN = '{{ token }}';
	</script>