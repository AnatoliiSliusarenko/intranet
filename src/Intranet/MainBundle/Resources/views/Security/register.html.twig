{% extends 'IntranetMainBundle::layout.html.twig' %}

{% block title %}Register area{% endblock %}

{% block libraries %}
{% endblock %}
{% block styles %}
	{{ parent() }}
  	<!-- Loading Stylesheets -->    
  	<link href="{{ asset('bundles/intranet/css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="list-group side-menu ">
	<a class="list-group-item" href="{{ url('intranet_login') }}">Login</a>
	<a class="list-group-item" href="#forgot-password">Forgot Password?</a>
</div>

<section id="register">
  
  <!-- multistep form -->
	<div id="msform">
	<!-- progressbar -->
	<ul id="progressbar">
		<li class="active">Hire/Work</li>
		<li>Register</li>
    <li>Congratulations</li>
	</ul>
	<!-- fieldsets -->
	<fieldset>
		 <h2 class="fs-title">Please choose type of usage</h2>
		 {% if hasAccess == false %}
		 <div class="resumo bg-danger">
			Sorry, users from your country can choose only "work" type!
		 </div>
		 {% endif %}
	     <select id="typeOfUsage">
	       {% if hasAccess == true %}
	       <option value="hire" selected>Hire</option>
	       {% endif %}
	       <option value="work">Work</option>
	     </select>  
	     <label>
        	Your Country: {{ country }}
      	 </label>
		 <input type="button" name="Next" class="next action-button" value="Next" />
	</fieldset>
	<fieldset>
		<h2 class="fs-title">Please enter registration data</h2>
		<div class="form-group">
        	<input type="text" placeholder="Name" id="name" value="{% if register_user %}{{ register_user.name }}{% endif %}" required>
      	</div>
	    <div class="form-group">
	        <input type="text" placeholder="Surname" id="surname" value="{% if register_user %}{{ register_user.surname }}{% endif %}" required>
	    </div>
        <div class="form-group">
            <input type="email" placeholder="Email" id="email" value="{% if register_user %}{{ register_user.email }}{% endif %}" required>
        </div>
        <div class="form-group">
          <input type="text" placeholder="Username" id="username" value="{% if register_user %}{{ register_user.username }}{% endif %}" required>
        </div>
        <div class="form-group">
          <input type="password" placeholder="Password" id="password" value="{% if register_user %}{{ register_user.password }}{% endif %}" required>
        </div>
        <div class="form-group">
          <input type="password" placeholder="Repeat Password" id="password2" value="{% if register_user %}{{ register_user.password }}{% endif %}" required>
        </div>
        <select id="typeOfUser">
	       <option value="dev" selected>Developer</option>
	       <option value="client">Client</option>
	    </select>
        {% if register_error %}
        <div class="alert alert-danger">
			{{ register_error }}
		</div>
	    {% endif %}
		<input type="button" name="previous" class="previous action-button" value="Previous" />
		<input type="button" name="next" class="next action-button" value="Register" />
	</fieldset>
	<fieldset>
		<h2 class="fs-title">Congratulations!</h2>
		<div class="resumo">
		Registration is successful. Welcome email was sent.
		</div>
		<input type="button" style="width: 300px;" class="action-button" value="Create your first office" />
	</fieldset>
</div>
</section>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	
	<!-- RECAPTCHA -->
<script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>

<!-- jQuery easing plugin -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
<script src="{{ asset('bundles/intranet/js/custom/registration.js') }}"></script>
<script>
var JSON_URLS = {
		registrationAction : "{{ url('intranet_register_action') }}"
}
</script>
{% endblock %}