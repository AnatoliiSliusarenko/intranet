{% set children = topic.getChildrenForOffice(em, office, app.user.userSettings.showHiddenTopics) %}
<li class='drop-link {% if topic.status == "closed" %}closed{% endif %}'><a href="{{ url('intranet_show_topic', {topic_id: topic.getId()}) }}">{{topic.name}}{% if (children|length > 0 ) %} <i class="fa fa-share right"></i>{% endif %}{% if topic.status == 'closed' %}<i class="fa fa-warning right"></i>{% endif %}</a>
		{% if ( children|length > 0 ) %}
		<ul class='drop-block'>
        {% for child in children %}
			{{include(
         		'IntranetMainBundle:Topic:showTopicMenuTree.html.twig',
           		{ 'topic': child }
        	)}}
        {% endfor %}
        </ul>
        {% endif %}
		</li>