<div class="modal-body">
    <form action="#" class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Sprint name</label>
            <select id="topics" ng-model="data.sprintid" class="form-control">
                {% for sprint in sprints %}
                    {% if sprint.statusid == 1 %}<option value="{{ sprint.id }}">{{ sprint.name }}</option>{% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-actions">
            <input type="submit" value="Save New Sprint" class="btn bg-primary btn-block text-white" ng-click="addTaskToSprint($event, {{ taskid }} )">
        </div>
    </form>
</div>