<div class="modal-body">
    <form action="#" class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 col-md-3 control-label">Name</label>
            <div class="col-lg-10 col-md-9">
                <input type="text" ng-model="sprint.name" class="form-control form-cascade-control" id="inputEmail1" placeholder="Type task name here" required>
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail2" class="col-lg-2 col-md-3 control-label">Description</label>
            <div class="col-lg-10 col-md-9">
                <input type="text" ng-model="sprint.description" class="form-control form-cascade-control" id="inputEmail2" placeholder="Type task description here" required>
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Save New Sprint" class="btn bg-primary btn-block text-white" ng-click="addSprint($event)">
        </div>
    </form>
</div>